<layout>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:CheckableImageview="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:id="@+id/root"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:paddingTop="0dp">
	<com.knziha.plod.widgets.CoordinatorLayoutSafe
		android:id="@+id/webcoord"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		>
		<com.google.android.material.appbar.AppBarLayout
			android:id="@+id/appbar"
			android:layout_width="match_parent"
			android:layout_height="?attr/actionBarSize"
			app:elevation="0dp"
			android:clipToPadding="false"
			android:clipChildren="false"
			>
			<androidx.appcompat.widget.Toolbar
				android:id="@+id/toolbar"
				android:layout_width="match_parent"
				android:layout_height="?attr/actionBarSize"
				android:minHeight="?attr/actionBarSize"
				android:theme="@style/toolbarBaseTheme"
				app:contentInsetLeft="0dp"
				app:contentInsetStart="0dp"
				app:contentInsetStartWithNavigation="0dp"
				android:background="?attr/colorPrimary"
				app:layout_scrollFlags="scroll|enterAlways|snap"
				android:clipToPadding="false"
				android:clipChildren="false"
				>
				<FrameLayout android:id="@+id/rlSearchFrameDelete"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:clipToPadding="false"
					android:clipChildren="false"
					android:paddingEnd="3dp"
					>
					<com.knziha.plod.widgets.EditTextmy
						android:id="@+id/etSearch"
						android:layout_width="fill_parent"
						android:layout_height="match_parent"
						android:textColor="#ffffff"
						android:singleLine="true"
						android:paddingStart="0dp"
						android:paddingEnd="23dp"
						android:imeOptions="actionSearch|flagNoExtractUi"
						tools:text="HAPPY SEARCHING"
						android:background="@null"
						/>
					<ImageView
						android:id="@+id/multilineBG"
						android:layout_width="25dp"
						android:layout_height="match_parent"
						android:paddingStart="3dp"
						android:paddingEnd="5dp"
						android:layout_gravity="end"
						/>
					<ImageView
						android:id="@+id/multiline"
						android:layout_width="25dp"
						android:layout_height="match_parent"
						android:src="@drawable/ic_menu_material"
						android:paddingStart="3dp"
						android:paddingEnd="5dp"
						android:layout_gravity="end"
						/>
					<View
						android:layout_width="match_parent"
						android:layout_height="match_parent"
						android:background="@drawable/abc_edit_text_material"
						android:layout_marginStart="-10dp"
						/>
					<View
						android:id="@+id/etPad"
						android:layout_width="10dp"
						android:layout_height="match_parent"
						android:layout_marginStart="-15dp"
						android:layout_marginBottom="12dp"
						/>
					<View
						android:id="@+id/etPad1"
						android:layout_width="8dp"
						android:layout_height="match_parent"
						android:layout_marginStart="-23dp"
						android:layout_marginBottom="12dp"
						/>
				</FrameLayout>
			</androidx.appcompat.widget.Toolbar>
		</com.google.android.material.appbar.AppBarLayout>

		<androidx.drawerlayout.widget.DrawerLayout
			android:id="@+id/drawer_layout"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			>
			<LinearLayout
				android:id="@+id/main"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:orientation="vertical"
				>
				<com.jess.ui.TwoWayGridView
					android:id="@+id/schtools"
					android:layout_width="match_parent"
					android:layout_height="@dimen/_65_"
					android:orientation="horizontal"
					android:layout_gravity="bottom"
					android:background="#ff8f8f8f"
					android:elevation="5dp"
					android:visibility="gone"
					/>
				<com.knziha.plod.widgets.LinearSplitView
					android:id="@+id/viewpagerPH"
					android:layout_width="match_parent"
					android:layout_height="0dp"
					android:layout_weight="1"
					android:orientation="horizontal"
					>
					<com.knziha.plod.widgets.NoScrollViewPager
						android:id="@+id/viewpager"
						android:layout_weight="1"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:background="#ffffff"
						/>
				</com.knziha.plod.widgets.LinearSplitView>
			</LinearLayout>

			<FrameLayout
				android:id="@+id/lnrSplitHdls"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				/>

			<fragment
				android:id="@+id/navigation_drawer"
				android:name="com.knziha.plod.plaindict.Drawer"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_gravity="start"
				/>
		</androidx.drawerlayout.widget.DrawerLayout>

		<LinearLayout
			android:id="@+id/bottombar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/_bottombarheight_"
			android:layout_gravity="bottom"
			android:gravity="center_vertical|fill_horizontal"
			android:orientation="horizontal"
			android:background="?attr/colorPrimary"
			app:layout_behavior="com.knziha.plod.widgets.BottomNavigationBehavior"
			android:elevation="5dp"
			>
			<com.knziha.plod.widgets.ActivatableImageView
				android:id="@+id/browser_widget1"
				android:layout_width="0dp"
				android:layout_height="wrap_content"
				android:layout_weight="1"
				android:background="@drawable/surrtrip1"
				android:src="@drawable/book_list"
				app:src0="@drawable/back_ic"
				app:activedSR="false"
				/>
		</LinearLayout>

		<include
			android:id="@+id/contentview"
			android:visibility="gone"
			layout="@layout/contentview"
			app:layout_behavior="@string/appbar_scrolling_view_behavior"
			/>

		<LinearLayout
			android:id="@+id/etSearchBar"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical"
			android:visibility="invisible"
			tools:visibility="visible"
			android:elevation="6dp"
			android:layout_marginTop="?attr/actionBarSize"
			>
			<View
				android:layout_width="match_parent"
				android:layout_height="2px"
				android:background="#f0afafaf"
				/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="@dimen/_35_"
				android:background="#8f8f8f"
				>
				<TextView
					android:id="@+id/etBack"
					android:text="返回"
					android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
					style="@style/SearchbarMenuTextStyle"
					/>
				<TextView
					android:id="@+id/etCopy"
					android:text="复制"
					android:drawableLeft="@drawable/ic_baseline_copy_24"
					style="@style/SearchbarMenuTextStyle"
					/>
				<TextView
					android:id="@+id/etPaste"
					android:text="粘贴"
					android:drawableLeft="@drawable/ic_baseline_paste_24"
					style="@style/SearchbarMenuTextStyle"
					/>
				<TextView
					android:id="@+id/etClear"
					android:text="清空"
					android:drawableLeft="@drawable/ic_baseline_clear_24"
					style="@style/SearchbarMenuTextStyle"
					/>
				<TextView
					android:id="@+id/etEnter"
					android:text="前往"
					android:drawableLeft="@drawable/abc_ic_go_search_api_material"
					style="@style/SearchbarMenuTextStyle"
					android:longClickable="true"
					/>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="2px"
				android:background="#f0afafaf"
				/>
			<FrameLayout
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				>
				<View
					android:id="@+id/show_search_history_dropdown_bg"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					android:background="#3E8F8F8F"
					android:onClick="onClick"
					/>
				<ImageView
					android:id="@+id/show_search_history_dropdown"
					android:layout_width="match_parent"
					android:layout_height="28dp"
					android:background="@drawable/frame_gradient_bgs"
					android:src="@drawable/ic_baseline_keyboard_arrow_down_24"
					android:onClick="onClick"
					/>
				<com.knziha.plod.widgets.DanjiListView
					android:id="@+id/search_hints"
					android:layout_width="match_parent"
					android:layout_height="match_parent"
					tools:listitem="@layout/search_hints_item"
					android:onClick="onClick"
					/>
			</FrameLayout>
		</LinearLayout>

	</com.knziha.plod.widgets.CoordinatorLayoutSafe>

	<FrameLayout
		android:id="@+id/mainF"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true"
		/>

	<FrameLayout
		android:id="@+id/second_holder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true"
		android:elevation="5dp"
		/>

<!--	<ProgressBar-->
<!--		android:id="@+id/main_progress_bar"-->
<!--		android:layout_width="wrap_content"-->
<!--		android:layout_height="wrap_content"-->
<!--		android:layout_gravity="center_vertical|center_horizontal"-->
<!--		 />-->

	<FrameLayout
		android:id="@+id/dialogHolder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:orientation="vertical"
		android:layoutDirection="ltr"
		android:elevation="6dp"
		android:visibility="gone"
		tools:visibility="visible"
		>
		<LinearLayout
			android:layout_centerInParent="true"
			android:id="@+id/dialog_"
			android:layout_width="350dp"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:background="@drawable/popup_background3"
			android:layout_marginTop="43dp"
			android:layout_marginBottom="@dimen/diagMarginVer"
			android:layout_centerVertical="true"
			android:minHeight="@dimen/_110_"
			android:layout_gravity="center"
			>
			<FrameLayout
				android:id="@+id/dialog_dict_picker"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"
				>
			</FrameLayout>
			<com.knziha.filepicker.widget.TextViewmy
				android:id="@+id/rcntSchList"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:text="最近搜索"
				android:paddingLeft= "25dp"
				android:paddingRight="25dp"
				android:paddingTop="10dp"
				android:paddingBottom="5dp"
				android:gravity="center_vertical"
				android:background="#DCFFFFFF"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginBottom="0dp"
				android:maxLines="3"
				android:visibility="gone"
				/>
			<HorizontalScrollView
				android:id="@+id/pdictBtm"
				android:layout_width="match_parent"
				android:layout_height="@dimen/_35_"
				android:orientation="horizontal"
				android:background="@drawable/popup_background3_"
				android:layout_marginLeft="1dp"
				android:layout_marginRight="1dp"
				android:layout_marginBottom="1dp"
				android:gravity="right"
				android:fillViewport="true"
				>
				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="match_parent"
					android:orientation="horizontal"
					android:background="@drawable/popup_background3_"
					>
					<com.knziha.plod.widgets.CheckableImageView
						android:id="@+id/pinPicBook"
						android:layout_width="@dimen/_35_"
						android:layout_height="match_parent"
						android:layout_below="@+id/autoSchSw"
						android:background="@drawable/listviewselector0"
						android:src="@drawable/sel_pin_vc"
						android:padding="5dp"
						android:tint="@color/SelHeaderBlue"
						android:foreground="@drawable/popup_background3__"
						/>
					<TextView
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:text="词典"
						android:paddingLeft="5dp"
						android:paddingRight="5dp"
						android:gravity="center_vertical"
						android:layout_weight="0.8"
						android:background="@drawable/listviewselector0"
						android:textColor="@color/SelHeaderBlue"
						android:maxLines="1"
						android:minWidth="@dimen/_35_"
						/>
					<TextView
						android:id="@+id/rcntSch"
						android:layout_width="0dp"
						android:layout_height="match_parent"
						android:text="最近词典…"
						android:paddingLeft="5dp"
						android:paddingRight="5dp"
						android:gravity="center_vertical"
						android:layout_weight="1"
						android:background="@drawable/listviewselector0"
						android:foreground="@drawable/popup_background3__"
						android:textColor="@color/SelHeaderBlue"
						android:maxLines="1"
						android:minWidth="@dimen/_35_"
						android:visibility="gone"
						/>
					<ImageView
						android:id="@+id/schBook"
						android:layout_width="@dimen/_35_"
						android:layout_height="match_parent"
						android:background="@drawable/listviewselector0"
						android:src="@drawable/search_toolbar"
						android:padding="5dp"
						android:tint="@color/SelHeaderBlue"
						android:foreground="@drawable/popup_background3__"
						/>
					<ImageView
						android:id="@+id/bundle"
						android:layout_width="@dimen/_35_"
						android:layout_height="match_parent"
						android:background="@drawable/listviewselector0"
						android:src="@drawable/book_bundle"
						android:padding="-1dp"
						android:tint="@color/SelHeaderBlue"
						android:foreground="@drawable/popup_background3__"
						/>
					<com.knziha.plod.widgets.CheckableImageView
						android:id="@+id/autoSchSw"
						android:layout_width="@dimen/_35_"
						android:layout_height="match_parent"
						android:layout_below="@+id/schBook"
						android:background="@drawable/listviewselector0"
						android:src="@drawable/sel_auto_search"
						CheckableImageview:CheckedTint="@color/ShallowHeaderBlue"
						android:padding="5dp"
						android:tint="@color/SelHeaderBlue"
						android:foreground="@drawable/popup_background3__"
						/>
				</LinearLayout>
			</HorizontalScrollView>
		</LinearLayout>

		<ViewStub
			android:id="@+id/view_stub"
			android:layout_gravity="top|center"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:minHeight="?attr/actionBarSize"
			android:theme="@style/toolbarBaseTheme"
			android:layout="@layout/searchbar"
			/>
	</FrameLayout>

	<FrameLayout
		android:id="@+id/snack_holder"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fitsSystemWindows="true"
		android:gravity="bottom"
		android:elevation="6dp"
		tools:visibility="gone"
		/>

	<RelativeLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		tools:visibility="gone"
		>
		<com.knziha.plod.widgets.AdvancedNestScrollListview
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:id="@+id/main_list"
			android:drawSelectorOnTop="false"
			android:listSelector="@drawable/listviewselector0"
			android:theme="@style/AppTheme"
			android:fastScrollEnabled="true"
			android:descendantFocusability="beforeDescendants"
			android:paddingLeft="10dp"/>
		<com.knziha.plod.widgets.AdvancedNestScrollListview
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:id="@+id/sub_list"
			android:drawSelectorOnTop="true"
			android:listSelector="@drawable/listviewselector0"
			android:background="@android:color/white"
			android:visibility="invisible"
			/>
		<com.knziha.plod.widgets.AdvancedNestScrollListview
			android:layout_height="match_parent"
			android:layout_width="match_parent"
			android:id="@+id/sub_list1"
			android:drawSelectorOnTop="true"
			android:listSelector="@drawable/listviewselector0"
			android:fastScrollEnabled="true"
			android:fastScrollStyle="@style/fscroll"
			android:layout_marginBottom="45dip"
			/>

		<com.knziha.plod.widgets.AdvancedNestScrollListview
			android:id="@+id/sub_list2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_marginBottom="45dip"
			android:drawSelectorOnTop="true"
			android:fastScrollEnabled="true"
			android:fastScrollStyle="@style/fscroll"
			android:listSelector="@drawable/listviewselector0"
			/>
	</RelativeLayout>

</FrameLayout>
</layout>