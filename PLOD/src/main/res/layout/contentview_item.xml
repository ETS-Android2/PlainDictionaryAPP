<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:clickable="true"
	tools:context="com.knziha.plod.plaindict.MainActivityUIBase">

	<com.knziha.plod.widgets.AdvancedNestScrollLinerView
		android:id="@+id/lltoolbar"
		android:layout_width="match_parent"
		android:layout_height="@dimen/dictitle"
		android:background="@drawable/progressbar"
		android:paddingTop="0dp"
		>
		<com.knziha.plod.widgets.FtagImageView
			android:id="@+id/cover"
			android:layout_width="@dimen/dtcover"
			android:layout_height="@dimen/dtcover"
			android:layout_gravity="center_vertical"
			android:background="@drawable/title_cover"
			android:layout_marginStart="@dimen/dtcoverL"
			/>
		<com.knziha.plod.widgets.FlowTextView
			android:id="@+id/toolbar_title"
			android:layout_width="wrap_content"
			android:layout_height="@dimen/dictitle"
			android:singleLine="true"
			android:textColor="@android:color/white"
			android:textSize="17sp"
			android:layout_marginLeft="5dp"
			android:layout_marginRight="5dp"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:maxLines="2"
			app:margin="17dp"
			/>

		<TextView
			android:id="@+id/undo"
			style="@style/title_btns"
			android:text="撤销"
			tools:visibility="visible"
			/>

		<TextView
			android:id="@+id/redo"
			style="@style/title_btns"
			android:text="重做"
			tools:visibility="visible"
			/>

		<TextView
			android:id="@+id/save"
			style="@style/title_btns"
			android:text="保存"
			tools:visibility="visible"
			/>

		<TextView
			android:id="@+id/tools"
			style="@style/title_btns"
			android:text="工具"
			tools:visibility="visible"
			/>

		<ImageView
			android:id="@+id/recess"
			android:layout_width="27dp"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical"
			android:src="@drawable/recess"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
 			android:background="@drawable/listviewselector0"
			/>
		<ImageView
			android:id="@+id/forward"
			android:layout_width="27dp"
			android:layout_height="match_parent"
			android:layout_marginLeft="6dp"
			android:layout_marginRight="2dp"
			android:layout_gravity="center_vertical"
			android:src="@drawable/forward"
			android:paddingTop="10dp"
			android:paddingBottom="10dp"
			android:paddingStart="4dp"
			android:background="@drawable/listviewselector0"
			/>
	</com.knziha.plod.widgets.AdvancedNestScrollLinerView>

	<com.knziha.plod.widgets.AdvancedNestScrollWebView
		android:id="@+id/webviewmy"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:fadingEdge="vertical"
		android:overScrollMode="never"
		android:focusable="true"
		android:focusableInTouchMode="true"
		android:scrollbars="vertical"
		/>
</LinearLayout>
</layout>