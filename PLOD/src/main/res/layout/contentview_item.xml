<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
				android:orientation="vertical"
				android:clickable="true"
                >
                
		<LinearLayout
			android:id="@+id/lltoolbar"
			android:layout_width="match_parent"
			android:layout_height="@dimen/dictitle"
	        android:paddingTop="0dp"
	        android:background="@color/colorHeaderBlue"
	        >
			<ImageView 
       			android:id="@+id/cover"
		        android:layout_width="@dimen/dtcover"
		        android:layout_height="@dimen/dtcover"
				android:layout_gravity="center_vertical"
		        android:background="@drawable/cover"
	        	android:layout_marginLeft="@dimen/dtcoverL"
			    />
		    <com.knziha.plod.widgets.SelectiveClickableTextView
		        android:id="@+id/toolbar_title"
		        android:layout_width="wrap_content"
		        android:layout_height="match_parent"
		        android:singleLine="true"
		        android:textColor="@android:color/white"
		        android:textSize="17sp"
		        android:layout_marginLeft="5dp"
		        android:layout_marginRight="5dp"
		        android:layout_weight="1"
				android:gravity="center_vertical"
		        />
		    
		   <TextView 
       			android:id="@+id/undo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:paddingLeft="2dp"
		        android:paddingRight="2dp"
		        android:text="Undo"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:clickable="true"
		        android:layout_marginRight="8dp"
		        android:background="@drawable/txt_tool"
		        android:visibility="gone"
			    />  
			    
		   <TextView 
       			android:id="@+id/redo"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:paddingLeft="2dp"
		        android:paddingRight="2dp"
		        android:text="Redo"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:clickable="true"
		        android:layout_marginRight="8dp"
		        android:background="@drawable/txt_tool"
		        android:visibility="gone"
				/>
		   
		   <TextView 
       			android:id="@+id/save"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
				android:layout_gravity="center_vertical"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
		        android:paddingLeft="2dp"
		        android:paddingRight="2dp"
		        android:text="Save"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:clickable="true"
		        android:layout_marginRight="8dp"
		        android:background="@drawable/txt_tool"
		        android:visibility="gone"
			    />
		    	
		    <ImageView 
       			android:id="@+id/recess"
		        android:layout_width="24dp"
		        android:layout_height="match_parent"
				android:layout_gravity="center_vertical"
		        android:src="@drawable/recess"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
			    />
		    <ImageView 
       			android:id="@+id/forward"
		        android:layout_width="24dp"
		        android:layout_height="match_parent"
		        android:layout_marginLeft="8dp"
				android:layout_gravity="center_vertical"
		        android:src="@drawable/forward"
		        android:layout_marginTop="5dp"
		        android:layout_marginBottom="5dp"
		        android:paddingTop="5dp"
		        android:paddingBottom="5dp"
			    />
			 </LinearLayout>
			 
		<com.knziha.plod.widgets.WebViewmy
       			android:id="@+id/webviewmy"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:theme="@style/scroll"
				android:fadingEdge="none"
				android:overScrollMode="never"
				android:focusable="true"
				android:focusableInTouchMode="true"
		        />
		    
</LinearLayout>