<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:UIStyles="http://schemas.android.com/apk/res-auto"
	android:id="@+id/popup"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:fitsSystemWindows="true"
	android:orientation="vertical"
	android:background="@drawable/floatcontent"
	android:layout_margin="10dp"
	android:elevation="6dp">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="45dp"
		android:orientation="horizontal"
		app:layout_scrollFlags="scroll|enterAlways"
		>
		<View
			android:id="@+id/cover"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:visibility="gone"/>

		<ImageView
			android:id="@+id/popIvBack"
			android:layout_width="50dp"
			android:padding="6dp"
			android:layout_height="match_parent"
			android:src="@drawable/abc_ic_ab_back_material_simple_compat"
			android:background="@drawable/abc_action_bar_item_background_material"
			/>
		<androidx.appcompat.widget.AppCompatTextView
			android:id="@+id/popupText1"
			android:layout_width="0dp"
			android:layout_height="match_parent"
			android:layout_weight="1"
			android:gravity="center_vertical"
			android:paddingTop="5dp"
			tools:text="androidx.appcompat.widget.AppCompatTextViewandroidx.appcompat.widget.AppCompatTextView"
			android:textSize="25sp"
			android:paddingBottom="5dp"
			android:autoSizeMinTextSize="10dp"
			android:autoSizeTextType="uniform"
			android:autoSizeMaxTextSize="25sp"
			android:ellipsize="end"
			android:maxLines="1"
			/>
		<android.widget.ImageView
			android:id="@+id/popLstDict"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/chevron_top22"
			android:background="@drawable/surrtrip1"
			/>
		<android.widget.ImageView
			android:id="@+id/popNxtDict"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/chevron_bottom22"
			android:background="@drawable/surrtrip1"
			/>
		<com.knziha.plod.widgets.ActivatableImageView
			android:id="@+id/popIvStar"
			android:layout_width="45dp"
			android:layout_height="match_parent"
			android:src="@drawable/star_ic_grey"
			android:background="@drawable/surrtrip1"
			app:src0="@drawable/star_ic_solid_framed"
			/>
	</LinearLayout>

	<com.knziha.plod.widgets.AdvancedNestScrollWebView
		android:id="@+id/webviewmy"
		android:layout_width="match_parent"
		android:layout_height="0dp"
		android:layout_weight="1"
		android:theme="@style/scroll"
		android:fadingEdge="none"
		android:overScrollMode="never"
		android:focusable="true"
		android:focusableInTouchMode="true"
		app:layout_behavior="@string/appbar_scrolling_view_behavior"
	/>

	<LinearLayout
			xmlns:UIStyles="http://schemas.android.com/apk/res-auto"
			android:id="@+id/checkerr"
			android:orientation="horizontal"
			android:layout_width="match_parent"
			android:layout_height="30dp"
			android:layout_gravity="bottom"
			android:background="@drawable/floatcontent_bottom"
			app:layout_behavior="com.knziha.plod.widgets.BottomNavigationBehavior"
			>
			<com.knziha.filepicker.widget.CircleCheckBox
				android:id="@+id/popChecker"
				android:layout_width="30dp"
				android:layout_height="30dp"
				app:dim1="6dp"
				app:color_background="#FF3F51B5"
				app:color_border="#FFF"
				app:size="25dp"
				app:src0="@drawable/clippin"
				android:layout_marginStart="8dp"
				/>
			<TextView
				android:id="@+id/popupText2"
				android:layout_width="0dp"
				android:layout_height="match_parent"
				android:layout_weight="1"
				android:gravity="bottom"
				android:padding="5dp"
				android:textColor="@color/OldHeaderBlue"
				android:singleLine="true"
				android:ellipsize="end"
				/>

			<ImageView
				android:id="@+id/popLstE"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/chevron_bottom2"
				android:tint="#666"
				/>
			<ImageView
				android:id="@+id/popNxtE"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:src="@drawable/chevron_top2"
				android:tint="#666"
				/>

			<ImageView
				android:id="@+id/popIvSettings"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:padding="4dp"
				android:src="@drawable/drawer_menu_icon_setting"
				android:layout_marginRight="5dp"
				/>

			<ImageView
				android:id="@+id/popIvRecess"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:padding="5dp"
				android:src="@drawable/recess"
				android:tint="#666"
				/>


			<ImageView
				android:id="@+id/popIvForward"
				android:layout_width="30dp"
				android:layout_height="30dp"
				android:padding="5dp"
				android:src="@drawable/forward"
				android:tint="#666"
				/>

		</LinearLayout>
</LinearLayout>
