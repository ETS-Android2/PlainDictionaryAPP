<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
	<item android:id="@android:id/background" >
		<shape
			android:shape="rectangle">
			<corners android:radius="0dp"/>
<!--			<solid-->
<!--				android:color="@color/colorHeaderBlue"-->
<!--				/>-->
			<gradient
				android:startColor="#e14F7FDF"
				android:endColor="#2b4381"
				android:type="linear"
				android:angle="270"
				/>
		</shape>
	</item>

	<item
		android:id="@android:id/progress"
		>
		<clip>
			<inset android:insetTop="@dimen/progress_inset">
				<shape
					android:shape="rectangle">
					<corners android:radius="0dp"/>
					<gradient
						android:startColor="#ccc"
						android:endColor="@color/SelHeaderBlue"
						android:startX="1"
						android:endX="12"
						android:type="linear"/>
				</shape>
			</inset>
		</clip>
	</item>

	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>
	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>
	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>
	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>
	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>
	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>
	<item android:drawable="@drawable/abc_list_selector_holo_dark"/>

</layer-list>