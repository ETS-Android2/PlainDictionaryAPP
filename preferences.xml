<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	>
	<PreferenceCategory
		android:key="cat_prog"
		android:title="程序设置"
		>
		<SwitchPreference
			android:defaultValue="false"
			android:key="GKCS"
			android:summary="词条的经典大小写转换仅支持26个英文字母，不利于拉丁文、俄文的排序。"
			android:title="全局使用经典大小写转换"/>
		<EditTextPreference
			android:defaultValue="100"
			android:key="def_fontscale"
			android:summary="默认的网页字体缩放(%)"
			android:title="全局字体缩放 : "/>
		<com.jaredrummler.colorpicker.ColorPickerPreference
			android:key="GPBC"
			android:title="全局网页背景: "
			android:summary="默认的网页背景色"
			android:defaultValue="@integer/COLOR_GREEN"
			/>
		<com.jaredrummler.colorpicker.ColorPickerPreference
			android:key="BCM"
			android:title="主程序背景: "
			android:summary="主程序背景色"
			android:defaultValue="@integer/COLOR_PRI"
			/>
		<com.jaredrummler.colorpicker.ColorPickerPreference
			android:key="BCF"
			android:title="浮动查询背景: "
			android:summary="浮动查询窗口背景色"
			android:defaultValue="@integer/COLOR_PRI"
			/>
	</PreferenceCategory>


</PreferenceScreen>
